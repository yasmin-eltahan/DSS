<% if !flash[:sucess].blank?%>
<div class="alert alert-success">
<%= flash[:sucess]%>
</div>
<%end%>
<div class="container">	

	<div>
	<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	    <h3 id="myModalLabel">New Company</h3>
	  </div>
	  <%= form_for(@company , :as=>:company, :validate => true, :url=>{:action=>'create'} , :html => {:multipart => true}) do |f| %>
	  <%= render(:partial=> 'form' , :locals => {:f => f})%>
	 <% end %>
	</div> 
	</div>

    <div class="row" >
	<div class="span3">
	<div class="header" style="padding-left:18px"> Companies</div> <br>
	</div>

	<div class="span3 offset4" style="margin-left:400px;padding-left:60px;">
    
			<%= form_tag( 'list', :method => 'get', :id=>"company-search", :class=>"pull-left" ,  :remote=>true) do %>
				<div class="input-append">
			 	<%= text_field_tag :search, params[:search] , :id=>"appendedInputButton" , :class=>"span12", :placeholder=>"search companies.." , :type=>"text" %>
			  	<button class="btn" type="submit">
			  		<i class="icon-search"></i>
			  	</button>
			  	</div>
			<% end %>
	</div>
	

	<div class="span1 pull-right" style="padding-left:20px;" >
	<% if user_signed_in? %>
	<% @admin = User.find(current_user.id) %>

	<% if !(@admin.role == "admin") %>
	<a href="#myModal" role="button" class="btns" data-toggle="modal" title="New company"><i class="icon-plus icon-white"></i></a>
	<%end%>
	<%end%>
	</div>
	</div>
		
    <div id="companylist">
	<%= render 'table' %>
    </div>
</div>
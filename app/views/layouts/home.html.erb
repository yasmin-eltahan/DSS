<!DOCTYPE html>
<html>
<head>

  <%= favicon_link_tag 'icon1.ico' %>
  <title>Decision Support System</title>
 <%= stylesheet_link_tag    "application", "bootstrap" , :media => "all" %>
  <%= javascript_include_tag "application" , "bootstrap.js" , "jquery.slimscroll.js" %>
  <%= csrf_meta_tags %>
</head>

<body class = "container-fluid" id = "background">
<div class="fix">
<div class="navbar navbar">
  <div class="navbar-inner kay"> 
     
      <ul class="nav navbar-nav">

        <li class="nav-link"><%= link_to({:controller => 'home',:action => 'index'} , :class=>"navlink-color") do %> <i class="icon-home"> </i> Home <%end%> </li>
       <li class="nav-link"><%= link_to("Company", {:controller => 'companies',:action => 'list'} , :class=>"navlink-color") %></li>
        <li  class="nav-link"><%= link_to("Vendor", {:controller => 'vendors',:action => 'list'} , :class=>"navlink-color") %></li>
        <li  class="nav-link"><%= link_to("System", {:controller => 'systems',:action => 'list'} , :class=>"navlink-color") %></li>
        <li  class="nav-link"><%= link_to("Requirement", {:controller => 'types',:action => 'new'} , :class=>"navlink-color") %></li>
        <li  class="nav-link"><%= link_to("Criteria", {:controller => 'criterions',:action => 'list'} , :class=>"navlink-color") %></li>
        <li  class="nav-link"><%= link_to("Specs", {:controller => 'specs',:action => 'list'} , :class=>"navlink-color") %></li>
        <% if user_signed_in? %>
        <li class="currentuser-name pull-right"><i class="icon-user"></i>
         Logged in as <strong><%= current_user.username %></strong>.
        </li>
        <li><%= link_to (image_tag 'logout.png') , destroy_user_session_path,:title => "logout",  method: :delete %></li>
        <%else%>
        <li style="margin-left:430px; margin-top:0px"><div><a href="#signinModal" role="button" class="btn btn-info"  data-toggle="modal" title = "Add A System">Sign In</a></div></li>
        <li style="margin-left:1100px; margin-top:-41px;"><div><a href="#signupModal" role="button" class="btn"  data-toggle="modal" title = "Add A System">Sign Up</a></div></li>
        <%end%>
      </ul>
    </div>
  </div>
</div>
  <div class="row-fluid">
    <div>

      <%= yield %>
    </div>

  </div>
      <div>
        <div id="signupModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Sign Up</h3>
          </div>
          <div class="modal-body" "body">
            <br>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div><label> <i class="icon-user"></i>Username</label>
            <%= f.text_field :username %></div>

            <div><label> <i class="icon-envelope"></i> Email</label>
            <%= f.email_field :email, :autofocus => true %></div>

            <div><label> <i class="icon-lock"></i> Password</label>
            <%= f.password_field :password %></div>

            <div><label> <i class="icon-lock"></i> Password Confirmation</label>
            <%= f.password_field :password_confirmation %></div>
          </div>
          <div class="modal-footer">
    <button class = "btn btn-primary" type = "submit">Sign Up</button>
  </div>
  <% end %>
        </div>
    </div>

    <div>
        <div id="signinModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Sign Up</h3>
          </div>
          <div class="modal-body" "body">
            <br>
           <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

          <div><b><label> <i class="icon-user"></i>Username or Email</label></b>
            <%= f.text_field :login%></div>

          <div><b><label> <i class="icon-lock"></i> Password</label></b>
          <%= f.password_field :password %></div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>
          </div>
          <div class="modal-footer">
    <button class = "btn btn-primary" type = "submit">Sign In</button>
  </div>
  <% end %>
        </div>
    </div>
</body>
</html>

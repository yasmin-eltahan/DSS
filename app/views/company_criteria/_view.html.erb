<div class="modal-body body"> 	
	<dl>
		<div><p style="color:#A64D4D;padding-left:10px;padding-bottom:4px;padding-top:1px;"><b>**All Weights given should be sumed up to 100 %</b></p></div>
         <br>
		<% Criteria.all.each do|criteria|%>
	<label><%= check_box_tag "criteria_ids[]", criteria.id , @ids.include?(criteria.id) , :class => "cb", id: dom_id(criteria)%><%= criteria.name%>:<div id=<%="#{criteria.id}"-%> style= "display:none"><%= f.text_field(criteria.id , :class => "span2 weight", :placeholder =>"weight") %> %</label> 

	<% Subcriteria.where(:criteria_id => criteria.id).each do |sub|%>
	<label><%= check_box_tag "subcriteria_ids[]", sub.id , @subids.include?(sub.id) , id: dom_id(sub)%><%= sub.name%></label>
	<%end%>
</div>
<br>
<%end%>
<%= f.hidden_field :sum , :id=>"sum" %>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
 		<button class = "btn btn-primary" type = "submit">Save</button>
    
</div>


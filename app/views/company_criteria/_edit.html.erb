<div class= "color2">
<div class="modal-body"> 
	
		
		<p style= "color:red"><b>**All Weights given should be sumed up to 100 %</b></p><br>
		
		<% Criteria.all.each do|criteria|%>
		
	<label class = "label1 criteria-background"><h4><%= check_box_tag "criteria_ids[]", criteria.id , @ids.include?(criteria.id) , :class => "cb", id: dom_id(criteria)%> &nbsp;&nbsp;<%= criteria.name%></h4></label>
	<% @m = CompanyCriteria.where(:company_id => @company , :criteria_id => criteria.id).first%>
			<% if !@m.blank?%>
			<% @v= @m.weight.to_s%>
			<%else%>
			<%@v = ""%>
			<%end%>
	<div id=<%="#{criteria.id}"-%> <% if @m.blank? %>style="display:none;"<%end%>>
	<p class = "p"><%= f.text_field(criteria.id , :class => "span4 weight", :placeholder =>"weight %" , :value => @v) %></p>
	<br>
	<h6 style="padding-left:20px;"> &#9733; Please Choose Sub-Criteria:</h6>
	<div class= "list" style="padding-left:20px;">
	<% Subcriteria.where(:criteria_id => criteria.id).each do |sub|%>
	<label class = "label1"><%= check_box_tag "subcriteria_ids[]", sub.id , @subids.include?(sub.id) , id: dom_id(sub)%><%= sub.name%></label>
	<%end%>
</div>
</div>
<hr>
<%end%>

<%= f.hidden_field :sum , :id=>"sum" %>
</div>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
 		<button class = "btn btn-primary save" type = "submit">Save</button>
    
  </div>
	
   
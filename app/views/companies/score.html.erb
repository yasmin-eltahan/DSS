        <h4 style="padding-left:23px"> <b><%= link_to("#{s.system.name}",{:controller=>"systems",:action=>'show',:id=>s.system.id}, :class=>"link-color-purple")%></b> </h4>
      <div>
      <div class="row">
          <div class="span3">   
            <% if (@button == "Yes")  %>
              <% @criteria.each do |c| %>
                   <b style="padding-left:42px"><%= c.criterion.name %></b><br>
                     <% getaverage = CompanyCriterions.find(:all,:conditions => {:company_id => @company.id , :system_id => s.system_id , :criterion_id => c.criterion_id}) %>

	<div class ="container">

<div>


<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Edit A Vendor</h3>
  </div>
  <%= form_for(@vendo , :as=>:vendor, :url=>{:action=>'update' , :id => @vendor.id}) do |f| %>
  <%= render(:partial=> 'form' , :locals => {:f => f})%>
 <% end %>
</div>
</div> 

<br>
<div class="row">
    <div class="span7">
    <div class="header" style="padding-left:15px"><%= @vendor.name %></div> <br>
    </div>
    <div class="span1" style="padding-left:300px">
   <a href="#myModal" role="button" class="btns" data-toggle="modal" title = "Edit"><i class="icon-pencil icon-white" ></i></a>
    </div>
    <div class="span1 pull-right" style="margin-right:-18px">
   <p class =" btns" title = "Delete"> <%= link_to({:action => 'destroy', :id=>params[:id]},:confirm => 'Are you sure you want to delete?!') do  %> <i class="icon-trash icon-white"></i> <%end%> </p>

    </div>
</div>


<div  class="show-box-list">
<div class="tabbable"> 
  <ul class="nav nav-tabs colorr">
    <li class="active"><a href="#tab1" data-toggle="tab">Description</a></li>
    <li><a href="#tab2" data-toggle="tab">Systems</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <div class="inner-content-div">
      <br>
    	<ul style="padding-left:23px;">
        <li><b>Description:</b><br></li>
         <p class = "line-break"><% if !@vendor.description.nil? %><%= @vendor.description %><%end%> </p>
    		 <li><b>Revenue:</b><br></li>
    		 <%= @vendor.revenue %>	
    		<br>
    		 <li><b>Public:</b><br></li>
    		<%= @vendor.public %>
    		<br>
    		<li><b>No of employees:</b><br></li>
    		<%= @vendor.no_of_employees%>
    		<br>
    		<li><b>Headquarters:</b><br></li>
    		<p class ="add"><%= @vendor.headquarters%><p>
          
          <address class ="add">
        <li><b>Address:</b><br></li>
        <%=@vendor.address%><br>
        <abbr title="Phone">P:</abbr> <%=@vendor.phone%> 
      </address>
    <address>
        <li><b>Website:</b><br></li>
       <a href="#"><%=@vendor.website%></a>
      </address>
    	</ul>
      <br>
    </div>
  </div>

    <div class="tab-pane" id="tab2">
      <div class="inner-content-div">
      <br>
      <ul><% @systems.each do |system| %>
      <p class = "title"><%= link_to("#{system.name}",{:controller=>"systems",:action=>'show',:id=>system.id}, :class=>"title link-color-purple")%></p>
      <p class="line-break"><%=system.description%></p>
      <hr>
      <%end%>

    </ul>
    <div>
      <div style="padding-left:23px"><a href="#mModal" role="button"  style="margin-left:700px" class="btnpink"  data-toggle="modal" title = "Add A System"><i class="icon-plus icon-white" ></i> New</a></div>

      <div id="mModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  
       <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
       <h3 id="myModalLabel"><%= @vendor.name %> System</h3>
      </div>
      <%= form_for(@system , :as=>:system, :url=>{:controller => 'systems' , :action=>'create' , :id => @vendor.id}) do |f| %>
       <%= render(:partial=> 'systems/form2' , :locals => {:f => f})%>
       <% end %>
        </div>
      </div>
    </div>
      </div>
    </div>
      
    
  </div>
</div>
</div>


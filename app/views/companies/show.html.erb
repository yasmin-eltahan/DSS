<br>
<div class="container">
<div class="header">Company name</div> <br>
<div class="show-box-list">
<div class="inner">
<br> 
   <% @systems.each do |s| %>
	  <h4 class="padding"> <b class="teal"><%= s.system.name %></b> </h4>
	<div>
	<div class="row">
	  <div class="span3">  	
		  <% if (@button == "Yes")	%>
			  <% @edits.each do |e| %>
				   <% if (e.system_id == s.system_id)%>
				   <b class="padding"><%= e.criteria.name %></b><br>
				   <span class="padding"> Weight: <%= e.weight %>% <span class="pull-right">Value: <%= e.value %></span></span>
				   <br><br>
				   <%end%>
			  <% end %>
		  <% end %>
	  </div>
	  <div class="span3 offset3 pull-right">
	  	<div frame="box" class="border">
	  	<div>
	    <b style="padding-left:18px">Score</b><br>
	    <span style="padding-left:22px"><% if !s.final_score.nil? %><%= s.final_score %><%end %></span>
	    </div>
	  </div>
	  </div>
	</div>
	</div>
	   <hr>
   <%end %>
	
<% if (@button == "No")	%>
<a href="#myModal" role="button" class="btn btn-primary new button" data-toggle="modal"><b>Score</b></a>

<div>
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">SCORE</h3>
  </div>
  <div  class="score-div padding">
		<%= form_for(:company_criteria, :url=>{:action=>'create' , :company_id => @company.id}) do |f| %>
		<%= render(:partial=>'score', :locals=>{:f=>f}) %>
		<%= f.submit("submit" , :class=>"button-padding") %>
		<% end %>
	</div>
</div>
</div> 
</div>
<%else %>
<a href="#editModal" role="button" class="btn btn-primary new button" data-toggle="modal"><b>Edit</b></a>
<div >
<div id="editModal" class="modal hide fade " tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">SCORE</h3>
  </div>
  <div  class="score-div padding">
		<%= form_for(:company_criteria, :url=>{:action=>'update' , :company_id => @company.id}) do |f| %>
		<%= render(:partial=>'edit', :locals=>{:f=>f}) %>
		<%= f.submit("submit" , :class=>"button-padding") %>
		<% end %>
	</div>
</div>
</div> 
<%end%>
</div>	
</div>
</div>